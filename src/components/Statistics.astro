---
import {
	numMembers,
	numProjects,
	numStars,
} from "../content/data/githubStats.js";

import Icon from "./Icon.astro";
---

<section class="statistics">
	<div class="stack gap-2 lg:gap-2 box">
		<Icon icon="people" size="2.5rem" color="var(--accent-dark)" />
		<h2 class="gradient counter">87</h2>
		<p>Members</p>
	</div>
	<div class="stack gap-2 lg:gap-4 box">
		<Icon icon="terminal-window" size="2.5rem" color="var(--accent-dark)" />
		<h2 class="gradient counter">{numProjects}</h2>
		<p>Projects</p>
	</div>
	<div class="stack gap-2 lg:gap-4 box">
		<Icon icon="star" size="2.5rem" color="var(--accent-dark)" />
		<h2 class="gradient counter">{numStars}</h2>
		<p>Stars</p>
	</div>
</section>

<style>
	.statistics {
		border: 1px solid var(--gray-800);
		border-radius: 0.75rem;
		padding: 1.5rem;
		background-color: var(--gray-999_40);
		box-shadow: var(--shadow-sm);

		text-align: center;
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		row-gap: 2rem;
		column-gap: 0rem;
		width: 100%;
	}

	.statistics h2 {
		font-size: var(--text-4xl);
	}

	.gradient {
		background: linear-gradient(
			0deg,
			var(--gradient-stop-1),
			var(--gradient-stop-2),
			var(--gradient-stop-3)
		);
		-webkit-background-clip: text;
		background-clip: text;
		color: transparent;
	}

	.box {
		align-items: center;
		justify-content: center;
	}

	.box {
		border-right: 1px solid var(--gray-700);
	}

	.box:last-child {
		border-right: 0;
	}
	@media (min-width: 50em) {
		.statistics {
			border-radius: 1.5rem;
			padding: 2rem 0rem;
			display: grid;
			grid-template-columns: repeat(3, 1fr);
			row-gap: 2rem;
			column-gap: 0rem;
			width: 100%;
		}
	}
</style>
